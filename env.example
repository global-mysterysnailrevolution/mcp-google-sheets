# Google Sheets MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Service Account Authentication (Recommended for production)
SERVICE_ACCOUNT_PATH=/app/credentials/service-account.json
DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# Alternative: OAuth Authentication (for development)
# CREDENTIALS_PATH=/app/credentials/credentials.json
# TOKEN_PATH=/app/credentials/token.json

# Alternative: Base64 encoded credentials (for containerized deployments)
# CREDENTIALS_CONFIG=ewogICJ0eXBlIjogInNlcnZpY2VfYWNjb3VudCIsCiAgInByb2plY3RfaWQiOiAi...

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=100

# Google API Configuration
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json
